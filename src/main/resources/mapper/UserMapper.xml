<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stu.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.stu.entity.User">
        <id column="id" property="id" />
        <result column="openid" property="openid" />
        <result column="unionid" property="unionid" />
        <result column="nickname" property="nickname" />
        <result column="avatar_url" property="avatarUrl" />
        <result column="identity_type" property="identityType" />
        <result column="school_name" property="schoolName" />
        <result column="department" property="department" />
        <result column="extended_info" property="extendedInfo" />
        <result column="user_type" property="userType" />
        <result column="company_name" property="companyName" />
        <result column="unified_social_credit_code" property="unifiedSocialCreditCode" />
        <result column="invoice_title" property="invoiceTitle" />
        <result column="tax_number" property="taxNumber" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="last_login_at" property="lastLoginAt" />
    </resultMap>

    <!-- 示例SQL查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM user WHERE id = #{id} AND deleted = 0
    </select>

</mapper>